<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dim_160"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/dim_8">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/dim_58"
        android:layout_height="@dimen/dim_58"
        android:layout_marginTop="@dimen/dim_24"
        android:padding="@dimen/dim_4"
        android:scaleType="centerInside"
        tools:src="@tools:sample/avatars"
        app:layout_constraintBottom_toTopOf="@id/heading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/flag" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="@dimen/dim_80"
        android:layout_height="@dimen/dim_40"
        android:layout_marginTop="@dimen/dim_4"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lines="2"
        android:maxLines="2"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon" />


</androidx.constraintlayout.widget.ConstraintLayout>
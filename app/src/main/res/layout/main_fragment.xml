<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/searchEdittext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_44"
        android:background="@drawable/gray_curved_border"
        android:layout_marginLeft="@dimen/dim_12"
        android:layout_marginTop="@dimen/dim_16"
        android:layout_marginRight="@dimen/dim_12"
        android:drawablePadding="@dimen/dim_10"
        android:hint="@string/search_country"
        android:inputType="text"
        android:paddingLeft="@dimen/dim_12"
        android:paddingRight="@dimen/dim_44"
        android:text=""
        android:textSize="@dimen/text_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dim_16"
        android:layout_marginRight="@dimen/dim_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchEdittext" />


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/dim_32"
        android:layout_height="@dimen/dim_32"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
